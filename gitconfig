[color]
	ui = auto
[alias]
	co = checkout
	br = branch
	ci = commit
	ca = commit --amend
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	pu = !"git fetch origin -v; git fetch upstream -v; git merge upstream/master"
	ll = log --graph --pretty=format:'%Cred%h - %Creset%s%Creset  %Cgreen(%cr)%Creset %C(bold blue) <%an>' --abbrev-commit --date=relative
	cleanup = remote prune origin
[pull]
	rebase = true
[push]
	default = simple
[core]
	autocrlf = input
	quotepath = false
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
